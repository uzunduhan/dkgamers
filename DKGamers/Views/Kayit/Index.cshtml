@model Kayit

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-3" style="background-color:#303030;padding:10px;">
            <div class="login-form">
                <form asp-controller="Kayit" asp-action="Index" method="POST">
                    <div class="text-warning" asp-validation-summary="All"></div>
                    <h2 class="text-center" style="color:white;">@localizer["Kayıt Ol"]</h2>
                    <div class="form-group">
                        <input asp-for="KullaniciAdi" type="text" class="form-control" placeholder="Kullanıcı Adı" />
                    </div>
                    <div class="form-group">
                        <input asp-for="Email" type="text" class="form-control" placeholder="E-Mail Adresi" />
                    </div>
                    <div class="form-group">
                        <input asp-for="Sifre" type="password" class="form-control" placeholder="Sifre" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-warning text-white btn-block">@localizer["Kayıt Ol"]</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>