@model OyunListViewModel

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-10">
            @foreach (var item in Model.Oyunlar)
            {
                <div class="row">
                    <div class="col-12 d-flex align-items-center" style="border:solid;border-color:black;padding:5px;">
                        <div class="col-5">
                            <img src="~/img/oyun/@item.Resim" alt="..." class="img-thumbnail">
                        </div>
                        <div class="col-7">
                            <p style="color:white;">@localizer["Oyun"]: <a style="color:white;" href="/yeni/detail/@item.OyunID">@item.OyunAdi</a></p>
                            <p style="color:white;">@localizer["Çıkış Tarihi"]: @item.PiyasayaSurulmeTarihi.ToShortDateString()</p>
                        </div>
                    </div>
                </div>
                <br />
            }
        </div>
    </div>
</div>