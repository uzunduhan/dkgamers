@model OyunListViewModel

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-10">
            @{ var i = 0; }
            @foreach (var item in Model.Oyunlar)
            {
                { i += 1; }
                <div class="row">
                    <div class="col-12 d-flex align-items-center" style="border:solid;border-color:black;padding:5px;">
                        <div class="col-1">
                            <p><font face="trajan" color="white" size="10"><b>@i.</b></font></p>
                        </div>
                        <div class="col-4">
                            <img src="~/img/oyun/@item.Resim" alt="..." class="img-thumbnail">
                        </div>
                        <div class="col-7">
                            <p style="color:white;">@localizer["Oyun"]: <a style="color:white;" href="/populer/detail/@item.OyunID">@item.OyunAdi</a></p>
                            <p style="color:white;">@localizer["Görüntülenme Sayısı"]: @item.GoruntulenmeSayisi</p>
                        </div>
                    </div>
                </div>
                <br />
            }
        </div>
    </div>
</div>